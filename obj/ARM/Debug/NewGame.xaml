            <Button.Background>
                <ImageBrush ImageSource="/Assets/wood _texture33.jpg"/>
            </Button.Background>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
        </Button>
        <Button x:ConnectionId='7' Content="Start Game" HorizontalAlignment="Center" Margin="0,477,0,0" VerticalAlignment="Top" Width="230" Foreground="White" FontFamily="Algerian" FontSize="16"                        Height="40" Windows10version1809:CornerRadius="15,15,15,15"/>
        <Button x:ConnectionId='8' Content="New Game" HorizontalAlignment="Left" Margin="396,134,0,0" VerticalAlignment="Top" Width="181" Height="41" FontFamily="Algerian" FontSize="16" Foreground="White"                       />
