                <ImageBrush/>
            </Image.FocusVisualPrimaryBrush>
        </Image>
        <Image x:ConnectionId='4' HorizontalAlignment="Left" Height="189" Margin="859,623,0,0" VerticalAlignment="Top" Width="250" Source="/Assets/Mickey_Mouse.png"                                        />
