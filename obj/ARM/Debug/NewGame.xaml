        <TextBlock HorizontalAlignment="Left" Margin="619,26,0,0" Text="GET THE GLITCH" TextWrapping="Wrap" VerticalAlignment="Top" Width="317" Height="53" FontFamily="Chiller" FontSize="48" RenderTransformOrigin="0.643,0.54" FontWeight="Bold"/>
