            </Image.FocusVisualPrimaryBrush>
        </Image>
        <Image x:ConnectionId='3' HorizontalAlignment="Left" Height="162" Margin="434,649,0,0" VerticalAlignment="Top" Width="250" Source="/Assets/tom-and-jerry-clipart-white-background-799335-18672.png"                                        >
